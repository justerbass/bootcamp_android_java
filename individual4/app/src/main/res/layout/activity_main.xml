<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bck"
    >

    <EditText
        android:id="@+id/input_first_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bck_bkc_text"
        android:hint="@string/hint_number"
        android:inputType="numberDecimal"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toBottomOf="@id/text_first_number"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/input_second_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bck_bkc_text"
        android:ems="10"
        android:hint="@string/hint_number"
        android:inputType="numberDecimal"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toBottomOf="@id/text_second_number"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        />

    <EditText
        android:id="@+id/input_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/bck_bkc_text"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toBottomOf="@id/guide_bottom"
        android:textSize="40sp"
        />

    <TextView
        android:id="@+id/text_first_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bck_bkc_text"
        android:text="@string/first_number"
        android:textColor="@color/text_color"
        app:layout_constraintTop_toTopOf="@id/guide_top"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_second_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bck_bkc_text"
        android:text="@string/second_number"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toBottomOf="@id/input_first_number"
        android:layout_marginTop="50dp"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bck_bkc_text"
        android:text="@string/result"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toTopOf="@id/input_result"
        android:layout_marginBottom="30dp"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <ImageButton
        app:srcCompat="@drawable/icons8_mas_48"
        android:id="@+id/button_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/back_btn_color"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toStartOf="@id/button_minus"
        app:layout_constraintBottom_toTopOf="@id/button_multiply"
        app:layout_constraintTop_toBottomOf="@id/input_second_number"
        />

    <ImageButton
        app:srcCompat="@drawable/icons8_menos_48"
        android:id="@+id/button_minus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/back_btn_color"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toBottomOf="@id/input_second_number"
        app:layout_constraintBottom_toTopOf="@id/button_divide"
        app:layout_constraintStart_toEndOf="@id/button_plus"
        />

    <ImageButton
        app:srcCompat="@drawable/icons8_multiplicar_48"
        android:id="@+id/button_multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/back_btn_color"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toStartOf="@id/button_divide"
        app:layout_constraintTop_toBottomOf="@id/button_plus"
        app:layout_constraintBottom_toTopOf="@id/text_result"
        />

    <ImageButton
        app:srcCompat="@drawable/icons8_dividir_48"
        android:id="@+id/button_divide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/back_btn_color"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toBottomOf="@id/button_minus"
        app:layout_constraintStart_toEndOf="@id/button_multiply"
        app:layout_constraintBottom_toTopOf="@id/text_result"

        />

    <ImageButton
        android:id="@+id/button_exit"
        app:srcCompat="@drawable/exit_to_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>